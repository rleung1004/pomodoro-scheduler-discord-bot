{
  "swagger": "2.0",
  "info": {
    "description": "This is a server for the Pomodoro Discord Bot to update and get Pomodoro schedules of a user.",
    "version": "1.0.0",
    "title": "Pomodoro Scheduler Discord Bot",
    "termsOfService": "http://swagger.io/terms/",
    "contact": {
      "email": "rleung95@my.bcit.ca"
    },
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    }
  },
  "host": "pomodoro-discord-bot.io",
  "basePath": "/v1",
  "tags": [
    {
      "name": "commitment",
      "description": "Operations to update commitments of a user",
      "externalDocs": {
        "description": "Find out more",
        "url": "http://swagger.io"
      }
    },
    {
      "name": "goal",
      "description": "Operations to update goals of a user",
      "externalDocs": {
        "description": "Find out more",
        "url": "http://swagger.io"
      }
    },
    {
      "name": "schedule",
      "description": "Operations to update and read a user's schedule",
      "externalDocs": {
        "description": "Find out more",
        "url": "http://swagger.io"
      }
    }
  ],
  "schemes": ["https"],
  "paths": {
    "/commitment/{userId}": {
      "put": {
        "tags": ["commitment"],
        "summary": "Add a commitment to the user's schedule",
        "description": "",
        "operationId": "addCommitment",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "description": "ID of user",
            "required": true,
            "type": "string",
            "format": "uuidv4"
          },
          {
            "in": "body",
            "name": "body",
            "description": "",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Commitment"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "Commitment {commitmentId} has been successfully created."
                }
              }
            }
          },
          "422": {
            "description": "Unprocessable entity"
          }
        }
      }
    },
    "/commitment/{userId}/{commitmentId}": {
      "patch": {
        "tags": ["commitment"],
        "summary": "Update an existing commitment to a user's schedule",
        "description": "",
        "operationId": "updateCommitment",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "description": "ID of user",
            "required": true,
            "type": "string",
            "format": "uuidv4"
          },
          {
            "name": "commitmentId",
            "in": "path",
            "description": "ID of commitment to update",
            "required": true,
            "type": "string",
            "format": "uuidv4"
          },
          {
            "in": "body",
            "name": "body",
            "description": "Commitment object that needs to be added to the user",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Commitment"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "No content"
          },
          "400": {
            "description": "Invalid ID supplied"
          },
          "404": {
            "description": "Commitment not found"
          },
          "422": {
            "description": "Unprocessable entity"
          }
        },
        "security": [
          {
            "scheduler_auth": ["write:schedules", "read:schedules"]
          }
        ]
      },
      "delete": {
        "tags": ["commitment"],
        "summary": "Delete an existing commitment to a user's schedule",
        "description": "",
        "operationId": "deleteCommitment",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "description": "ID of user",
            "required": true,
            "type": "string",
            "format": "uuidv4"
          },
          {
            "name": "commitmentId",
            "in": "path",
            "description": "ID of commitment to delete",
            "required": true,
            "type": "string",
            "format": "uuidv4"
          }
        ],
        "responses": {
          "400": {
            "description": "Invalid ID supplied"
          },
          "404": {
            "description": "Commitment not found"
          }
        }
      }
    },
    "/goal": {
      "put": {
        "tags": ["goal"],
        "summary": "Add a goal to the user's schedule",
        "description": "",
        "operationId": "addGoal",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Goal"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "Commitment {commitmentId} has been successfully created."
                }
              }
            }
          },
          "422": {
            "description": "Unprocessable entity"
          }
        }
      }
    },
    "/goal/{userId}/{goalId}": {
      "patch": {
        "tags": ["goal"],
        "summary": "Update an existing goal to a user's schedule",
        "description": "",
        "operationId": "updateGoal",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "description": "ID of user",
            "required": true,
            "type": "string",
            "format": "uuidv4"
          },
          {
            "name": "goalId",
            "in": "path",
            "description": "ID of Goal to update",
            "required": true,
            "type": "string",
            "format": "uuidv4"
          },
          {
            "in": "body",
            "name": "body",
            "description": "Goal object that needs to be added to the user",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Goal"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "No content"
          },
          "400": {
            "description": "Invalid ID supplied"
          },
          "404": {
            "description": "Commitment not found"
          },
          "422": {
            "description": "Unprocessable entity"
          }
        }
      },
      "delete": {
        "tags": ["goal"],
        "summary": "Delete an existing goal to a user's schedule",
        "description": "",
        "operationId": "deleteGoal",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "description": "ID of user",
            "required": true,
            "type": "string",
            "format": "uuidv4"
          },
          {
            "name": "goalId",
            "in": "path",
            "description": "ID of Goal to delete",
            "required": true,
            "type": "string",
            "format": "uuidv4"
          }
        ],
        "responses": {
          "400": {
            "description": "Invalid ID supplied"
          },
          "404": {
            "description": "Commitment not found"
          }
        }
      }
    },
    "/schedule/{userId}": {
      "get": {
        "tags": ["schedule"],
        "summary": "Get all schedule work blocks of a user",
        "description": "",
        "operationId": "getSchedulesByUserId",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "description": "ID of user",
            "required": true,
            "type": "string",
            "format": "uuidv4"
          }
        ],
        "responses": {
          "200": {
            "description": "Created",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "All schedule work blocks of user {userId}"
                },
                "schedule": {
                  "type": "array",
                  "items": {
                    "$ref": "#/definitions/Schedule"
                  }
                }
              }
            }
          },
          "422": {
            "description": "Unprocessable entity"
          }
        }
      }
    }
  },
  "definitions": {
    "Commitment": {
      "type": "object",
      "properties": {
        "location": {
          "type": "string",
          "description": "Location of commitment"
        },
        "name": {
          "type": "string",
          "description": "Name of commitment"
        },
        "notes": {
          "type": "string",
          "format": "Notes about the commitment from the user"
        },
        "repeats": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/RepeatType"
          }
        },
        "url": {
          "type": "string",
          "description": "URL of commitment"
        },
        "startTime": {
          "type": "string",
          "format": "date-time"
        },
        "endDate": {
          "type": "string",
          "format": "date-time"
        },
        "minutes": {
          "type": "integer",
          "format": "int64"
        }
      }
    },
    "Goal": {
      "type": "object",
      "properties": {
        "location": {
          "type": "string",
          "description": "Location of goal"
        },
        "name": {
          "type": "string",
          "description": "Name of goal"
        },
        "notes": {
          "type": "string",
          "format": "Notes about the goal from the user"
        },
        "totalTime": {
          "type": "integer",
          "format": "int64",
          "description": "Total time required to complete goal"
        },
        "timeLeft": {
          "type": "integer",
          "format": "int64",
          "description": "Time left required to complete goal"
        },
        "priority": {
          "type": "integer",
          "format": "int64",
          "description": "Priority of goal, the lower the value the higher the priority"
        },
        "endDate": {
          "type": "string",
          "format": "date"
        },
        "minTaskTime": {
          "type": "integer",
          "format": "int64",
          "description": "Minimum amount of time required to work on goal in each work block"
        },
        "ignoreDeadline": {
          "type": "boolean",
          "description": "A flag to ignore deadline or not"
        }
      }
    },
    "Schedule": {
      "type": "object",
      "description": "A schedule work block",
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64",
          "description": "ID of schedule"
        },
        "userId": {
          "type": "string",
          "description": "ID of user who owns this schedule"
        },
        "date": {
          "type": "string",
          "format": "date",
          "description": "Date of the schedule work block"
        },
        "time": {
          "type": "string",
          "format": "time",
          "description": "Time of the schedule work block"
        },
        "name": {
          "type": "string",
          "description": "Name of schedule work block"
        },
        "minutes": {
          "type": "integer",
          "format": "int64",
          "description": "The duration of schedule work block in minutes"
        },
        "is_goal": {
          "type": "boolean",
          "description": "Is the schedule work block a goal or not"
        }
      }
    },
    "RepeatType": {
      "type": "string",
      "description": "Repeat type of commitment",
      "enum": ["MON", "TUES", "WED", "THURS", "FRI", "SAT", "SUN"]
    }
  }
}
